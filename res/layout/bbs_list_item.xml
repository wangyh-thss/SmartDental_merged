<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_emr_row_background"
    android:orientation="horizontal" 
    android:descendantFocusability="blocksDescendants">
    
	<TextView 
	    android:id="@+id/bbs_list_item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:textSize="17sp"
	    android:textColor="@color/app_black"
	    android:text="title"
	    />
	<TextView 
	    android:id="@+id/bbs_list_item_preview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@color/preview_grey"
	    android:layout_alignLeft="@+id/bbs_list_item_title"
	    android:layout_below="@+id/bbs_list_item_title"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="5dp"
	    android:text="preview"
	    />
	<TextView 
	    android:id="@+id/bbs_list_item_author"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@color/app_grey"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/bbs_list_item_preview"
	    android:layout_marginTop="7dp"
	    android:layout_marginLeft = "20dp"
	    android:text="author"
	    android:layout_marginBottom="2dp"
	    />
	<TextView 
	    android:id="@+id/bbs_list_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="13sp"
	    android:textColor="@color/app_grey"
	    android:layout_alignParentRight="true"
	    
	    android:layout_marginRight = "20dp"
	    android:layout_below="@+id/bbs_list_item_preview"
	    android:layout_marginTop="14dp"
	    android:text="time"
	    />
	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="20dp"
    	android:background="@color/light_grey"
    	android:orientation="horizontal" 
    	android:layout_below="@+id/bbs_list_item_author"
    	android:descendantFocusability="blocksDescendants">
     </RelativeLayout>

	
	
	
